<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <gradient  android:angle="-90"  android:startColor="@color/white_light" android:endColor="@color/white_light"  />
            </shape>
        </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <gradient  android:angle="-90"  android:startColor="@color/white_light" android:endColor="@color/white_light"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <gradient  android:angle="-90"  android:startColor="@android:color/transparent" android:endColor="@android:color/transparent"  />
        </shape>
    </item>
</selector>